<form id="registerForm" class="custom-form mb-4">
    <div>
        <label for="name" class="form-label w-100">
            <span class="font-weight-bold">Name:</span>
            <input type="text" placeholder="Enter name" name="name" id="name" class="form-control" />
        </label>
    </div>
    <div>
        <label for="surname" class="form-label w-100">
            <span class="font-weight-bold">Surname:</span>
            <input type="text" placeholder="Enter surname" name="surname" id="surname" class="form-control" />
        </label>
    </div>
    <div>
        <label for="event" class="form-label w-100">
            <span class="font-weight-bold">Event:</span>
            <select name="event" id="event" class="form-control form-select">
                {{#each events as | event |}}
                    <option value="{{event._id}}">
                        {{event.name}} - {{event.date}}, {{event.description}}
                    </option>
                {{/each}}
            </select>
        </label>
    </div>
    <div>
        <label for="city" class="form-label w-100">
            <span class="font-weight-bold">City:</span>
            <select name="city" id="city" class="form-control form-select">
                {{#each cities as | city |}}
                    <!--co z city._id-->
                    <option value="{{city._id}}">
                        {{city.name}}
                    </option>
                {{/each}}
            </select>
        </label>
    </div>
    <div class="d-flex">
        <button type="submit" id="registerButton"
                class="btn btn-primary btn-rounded w-50 mx-auto mt-4">Submit</button>
    </div>
</form>
